{
  "name": "@aboutbits/react-ui-integrations",
  "version": "1.0.2",
  "description": "Webpack and Tailwind integration for ReactUI",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "engines": {
    "node": "^16",
    "npm": "^8"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project tsconfig.build.cjs.json",
    "build:esm": "tsc --project tsconfig.build.esm.json",
    "lint": "eslint --ext js,ts,tsx src",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --project tsconfig.build.esm.json --noEmit",
    "test": "jest --verbose --passWithNoTests",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "version": "npm run test && npm run lint && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aboutbits/react-ui-integrations"
  },
  "private": false,
  "keywords": [
    "react-ui",
    "webpack",
    "tailwind"
  ],
  "author": "About Bits",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aboutbits/react-ui-integrations/issues"
  },
  "homepage": "https://github.com/aboutbits/react-ui-integrations#readme",
  "files": [
    "readme.md",
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@aboutbits/react-ui": "github:aboutbits/react-ui#react-18",
    "next": "^12 || ^13",
    "react": "^17.0.2",
    "tailwindcss": "^3.1",
    "webpack": "^5"
  },
  "devDependencies": {
    "@aboutbits/react-ui": "github:aboutbits/react-ui#react-18",
    "@types/jest": "^28.1.3",
    "@types/lodash.mergewith": "^4.6.7",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.1.0",
    "jest": "^28.1.1",
    "next": "^13.0.0",
    "prettier": "^2.7.1",
    "react": "^18.0.0",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "lodash.mergewith": "^4.6.2",
    "tailwind-merge": "^1.3.0"
  }
}
