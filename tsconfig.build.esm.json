{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "exclude": ["**/__test__/*", "**/__tests__/*"],
  "include": ["src"]
}
